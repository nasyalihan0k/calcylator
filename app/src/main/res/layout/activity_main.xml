<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ExtraText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAC"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onNumberClick"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:cornerRadius="200dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus_plus"
                android:onClick="onOperationClick"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:cornerRadius="200dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_proc"
                android:onClick="onOperationClick"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/grey"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="28sp"
                app:cornerRadius="200dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delen"
                android:onClick="onOperationClick"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:cornerRadius="200dp" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="32dp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="80sp" />


            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                android:onClick="onNumberClick7"
                style="@style/Gray.Button"
                android:backgroundTint="@color/dark_grey"
                android:text="7"></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                android:onClick="onNumberClick8"
                style="@style/Gray.Button"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/dark_grey"
                android:text="8"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                android:onClick="onNumberClick9"
                style="@style/Gray.Button"
                android:backgroundTint="@color/dark_grey"
                android:text="9"></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ymnozh"
                android:onClick="onOperationClick"
                style="@style/Base.Button"
                android:layout_height="80dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Ñ…"
                android:textColor="@color/white"
                android:textSize="28sp">


            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                android:onClick="onNumberClick"
                style="@style/Gray.Button"
                android:backgroundTint="@color/dark_grey"
                android:text="4"></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                android:onClick="onNumberClick"
                style="@style/Gray.Button"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/dark_grey"
                android:text="5"></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                android:onClick="onNumberClick"
                style="@style/Gray.Button"
                android:backgroundTint="@color/dark_grey"
                android:text="6"></com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                android:onClick="onOperationClick"
                style="@style/Base.Button"
                android:layout_height="92dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="28sp">


            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn"
                style="@style/Gray.Button"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onNumberClick"
                android:text="1" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/Gray.Button"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/dark_grey"
                android:onClick="onNumberClick"
                android:text="2" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                android:onClick="onNumberClick"
                style="@style/Gray.Button"
                android:backgroundTint="@color/dark_grey"
                android:text="3" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                style="@style/Base.Button"
                android:layout_height="80dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperationClick"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="28sp">


            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toBottomOf="parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                android:onClick="onNumberClick"
                style="@style/Gray.Button"
                android:layout_weight="178"
                android:backgroundTint="@color/dark_grey"
                android:paddingStart="32dp"
                android:text="0"
                android:textAlignment="textStart" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn."
                android:onClick="onOperationClick"
                style="@style/Gray.Button"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/dark_grey"
                android:text="." />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_rovno"
                style="@style/Base.Button"
                android:layout_height="80dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="onOperationClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="28sp">


            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>